<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_bg"
                android:orientation="vertical">

    <com.topad.view.customviews.TabWidgetLayout
        android:id="@+id/tab_widget"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#f7f7f7"
        android:gravity="center"/>
    <View
        android:id="@+id/line"
        android:layout_width="fill_parent" android:layout_height="0.1dp"
        android:layout_above="@id/tab_widget"
          android:background="@color/fuxk_base_divide_line_color"/>
    <FrameLayout
        android:id="@+id/center_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/line">
    </FrameLayout>

</RelativeLayout>