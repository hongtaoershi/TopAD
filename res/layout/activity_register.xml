<!-- 服务类表页 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bule"
    android:orientation="vertical">

    <!-- 顶部标题 -->
    <com.topad.view.customviews.TitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawablePadding="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="20dp"/>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/app_bg"
        android:layout_below="@id/title">

        <LinearLayout
            android:id="@+id/scroll_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/gray_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <!-- 用户名 -->
                <EditText
                    android:id="@+id/et_username_register"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    android:drawableLeft="@drawable/login_register_mobile"
                    android:drawablePadding="15dp"
                    android:paddingLeft="15dp"
                    android:textColorHint="#AAAAAA"
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:hint="输入手机号码"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:completionThreshold="1"
                    android:maxLength="11"/>

                <!-- 密码 -->
                <EditText
                    android:id="@+id/et_password_register"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    android:drawableLeft="@drawable/login_register_key"
                    android:drawablePadding="15dp"
                    android:paddingLeft="15dp"
                    android:textColorHint="#AAAAAA"
                    android:textSize="15dip"
                    android:singleLine="true"
                    android:hint="设置密码"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:maxLength="20"
                    android:inputType="textPassword"/>

                <!-- 确认密码 -->
                <EditText
                    android:id="@+id/et_confirm_password_register"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/bg_edittext"
                    android:drawableLeft="@drawable/login_register_key"
                    android:drawablePadding="15dp"
                    android:paddingLeft="15dp"
                    android:textColorHint="#AAAAAA"
                    android:textSize="15dp"
                    android:singleLine="true"
                    android:hint="再次输入 确认密码"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:completionThreshold="1"
                    android:maxLength="20"
                    android:inputType="textPassword"/>

                <!-- 验证码 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tv_get_verify_code_again"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="获取验证码"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_16"
                        android:background="#50d2c2"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>


                    <EditText
                        android:id="@+id/et_sms_code"
                        android:layout_width="fill_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/bg_edittext"
                        android:drawableLeft="@drawable/register_sms_code"
                        android:drawablePadding="15dp"
                        android:paddingLeft="15dp"
                        android:textColorHint="#AAAAAA"
                        android:textSize="15dp"
                        android:singleLine="true"
                        android:hint="输入验证码"
                        android:inputType="number"
                        android:completionThreshold="1"
                        android:maxLength="6"
                        android:layout_toLeftOf="@id/tv_get_verify_code_again"
                        android:gravity="center_vertical"
                        android:numeric="integer"
                        android:text=""
                        />
                </RelativeLayout>


            </LinearLayout>

            <!-- 注册 -->
            <Button
                android:id="@+id/btn_register"
                style="@style/btn_bule2_borad_style"
                android:focusable="false"
                android:text="注册"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tv_need_details_content"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>